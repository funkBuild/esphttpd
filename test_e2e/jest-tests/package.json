{
  "name": "esphttpd-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for ESP32 HTTP server",
  "scripts": {
    "test": "jest --runInBand",
    "test:http": "jest --runInBand --testPathIgnorePatterns=websocket",
    "test:websocket": "jest --runInBand --testPathPattern=websocket --testTimeout=120000",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:verbose": "jest --verbose --runInBand"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "axios": "^1.6.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "ws": "^8.16.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "**/__tests__/**/*.ts",
      "!**/__tests__/**/*.test.ts"
    ],
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ]
  }
}